  <!-- SaÄŸ tÄ±k menÃ¼sÃ¼ -->
  <div class="context-menu" id="contextMenu">
    <div><b style="padding:8px 10px; display:block; color:#cfe3ff">Ä°ÅŸlemler</b></div>
    <button data-action="color-red">YazÄ±yÄ± KÄ±rmÄ±zÄ± Yap</button>
    <button data-action="color-green">YazÄ±yÄ± YeÅŸil Yap</button>
    <button data-action="color-blue">YazÄ±yÄ± Mavi Yap</button>
    <button data-action="color-yellow">YazÄ±yÄ± SarÄ± Yap</button>
    <div class="grp"></div>
    <button data-action="bigger">YazÄ±yÄ± BÃ¼yÃ¼t</button>
    <button data-action="smaller">YazÄ±yÄ± KÃ¼Ã§Ã¼lt</button>
    <div class="grp"></div>
    <button data-action="add-note-under-file" style="display:none">Bu DosyanÄ±n AltÄ±na Yeni Not</button>
    <button data-action="rename-file" style="display:none">DosyayÄ± Yeniden AdlandÄ±r</button>
    <button data-action="delete-file" style="display:none">DosyayÄ± Sil</button>
    <button data-action="rename-note" style="display:none">Notu Yeniden AdlandÄ±r</button>
    <button data-action="delete-note" style="display:none">Notu Sil</button>
    <button data-action="delete-code" style="display:none">Kod BloÄŸunu Sil</button>
    <button data-action="delete-block" style="display:none">BloÄŸu (ParagrafÄ±) Sil</button>
